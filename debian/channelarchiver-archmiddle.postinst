#!/bin/bash -e
case "$1" in
configure)
  if ! grep -q '^archmiddle:' /etc/passwd; then
    adduser --system --home /var/log/archmiddle --ingroup nogroup \
      --no-create-home --disabled-password archmiddle > /dev/null 2>&1
  fi
  ;;
abort-upgrade|abort-remove|abort-deconfigure)
  ;;
*)
  echo "postinst called with unknown argument \`$1'" >&2
  exit 0
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
